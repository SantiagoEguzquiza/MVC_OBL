@{
    ViewData["Title"] = "VerFactura";
}

<h1>Ver Factura</h1>

@try
{
    <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <th>Usuario</th>
                <th>Tipo</th>
                <th>Fecha</th>
                <th>Id Tienda</th>
            </tr>


            @foreach (var linea in ViewBag.Compra)
            {
                <tr>
                    <td>@linea.IdUsuario</td>
                    <td>Compra</td>
                    <td>@linea.FechaRegistro</td>
                    <td>@linea.IdTienda</td>
                </tr>
            }

        </table>
    </div>




    <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <th>ID Producto</th>
                <th>Cantidad</th>
                <th>Precio unitario</th>
                <th>Moneda</th>
                <th>Total</th>
            </tr>


            @foreach (var linea in ViewBag.ListaDetalleCompra)
            {
                <tr>
                    <td>@linea.IdProducto</td>
                    <td>@linea.Cantidad</td>
                    <td>@linea.PrecioUnitarioCompra</td>
                    <td>@linea.Moneda</td>                  
                    <td>@linea.TotalCosto</td>

                </tr>
            }

        </table>
    </div>
    <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <th>TOTAL</th>
            </tr>

            <tr>
                <td>@ViewBag.TotalCompra</td>
            </tr>


        </table>
    </div>

}
catch (Exception)
{

}

