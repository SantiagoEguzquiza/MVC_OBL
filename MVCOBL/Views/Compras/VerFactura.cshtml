@{
	ViewData["Title"] = "VerFactura";
}

<head>

	<link rel="stylesheet" href="~/css/Facturas.css" asp-append-version="true" />

</head>


<div class="contenedor">

	<div class="titulo">
		<h1>Factura</h1>
	</div>

	<div style="margin-top: 10px;padding: 5px">
		<table id="tablax" class="table table-striped table-bordered" style="width:15vh">
			<tr>
				<th>
					Cotizacion USD
				</th>
			</tr>
			<tr>
				<td class="tdcoti">
					@ViewBag.Cotizacion
				</td>
			</tr>
		</table>
	</div>
</div>



@try
{

	<div class="container" style="margin-top: 10px;padding: 5px">
		<table id="tablax" class="table table-striped table-bordered" style="width:100%">
			<tr>
				<th>Usuario</th>
				<th>Fecha</th>
				<th>Tipo</th>
				<th>Sucursal</th>
				<th>nº Factura</th>
			</tr>



			<tr>
				<td>@ViewBag.Usuario</td>
				<td>@ViewBag.Fecha</td>
				<td>Compra</td>
				<td>@ViewBag.Sucursal</td>
				<td>@ViewBag.Factura</td>
			</tr>


		</table>
	</div>




	<div class="container" style="margin-top: 10px;padding: 5px">
		<table id="tablax" class="table table-striped table-bordered" style="width:100%">
			<tr>
				<th>Nombre Producto</th>
				<th>Cantidad</th>
				<th>Precio unitario</th>
				<th>Moneda</th>
				<th>Total en Pesos</th>
			</tr>


			@foreach (var linea in ViewBag.combinada2)
			{
				<tr>
					<td>@linea.Item1</td>
					<td>@linea.Item2</td>
					<td>@linea.Item3</td>
					<td>@linea.Item4</td>
					<td>@linea.Item5</td>

				</tr>
			}

		</table>
	</div>
	<div class="container" style="margin-top: 10px;padding: 5px">
		<table id="tablax" class="table table-striped table-bordered" style="width:100%">
			<tr>
				<th>TOTAL</th>
			</tr>

			<tr>
				<td>@ViewBag.TotalCompra</td>
			</tr>


		</table>
	</div>

}
catch (Exception)
{

}

