@{
    ViewData["Title"] = "VerFactura";
}

<h1>Ver Factura</h1>





@try
{
    <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <th>Usuario</th>
                <th>Tipo</th>
                <th>Fecha</th>
                <th>Id Cliente</th>
            </tr>


            @foreach (var linea in ViewBag.Venta)
            {
                <tr>
                    <td>@linea.IdUsuario</td>
                    <td>Venta</td>
                    <td>@linea.FechaRegistro</td>
                    <td>@linea.IdCliente</td>
                </tr>
            }

        </table>
    </div>




    <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <th>ID Producto</th>
                <th>Cantidad</th>
                <th>Precio unitario</th>
                <th>Moneda</th>
                <th>Total en Pesos</th>
            </tr>


            @foreach (var linea in ViewBag.ListaDetalle)
            {
                <tr>
                    <td>@linea.IdProducto</td>
                    <td>@linea.Cantidad</td>
                    <td>@linea.PrecioUnidad</td>
                    <td>@linea.Moneda</td>
                    <td>@linea.ImporteTotal</td>

                </tr>
            }

        </table>
    </div>
    <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <th>TOTAL</th>
            </tr>

            <tr>
                <td>@ViewBag.Total</td>
            </tr>


        </table>
    </div>

}
catch (Exception)
{

}

