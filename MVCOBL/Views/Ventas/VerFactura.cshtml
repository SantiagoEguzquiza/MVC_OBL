@{
    ViewData["Title"] = "VerFactura";
}

<head>

    <link rel="stylesheet" href="~/css/Facturas.css" asp-append-version="true" />

</head>


<div class="contenedor">

    <div class="titulo">
        <h1>Factura</h1>
    </div>

    <div style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:15vh">
            <tr>
                <th>
                    Cotizacion USD
                </th>
            </tr>
            <tr>
                <td class="tdcoti">
                    @ViewBag.Cotizacion
                </td>
            </tr>
        </table>
    </div>
</div>





@try
{
    <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <th>Usuario</th>
                <th>Fecha</th>
                <th>Tipo</th>                            
                <th>Cliente</th>
                <th>Sucursal</th>
                <th>nº Factura</th>
            </tr>


            @foreach (var linea in ViewBag.Combinada)
            {
                <tr>
                    <td>@linea.Item1</td>
                    <td>@linea.Item4</td>
                    <td>Venta</td>
                    <td>@linea.Item2</td>                 
                    <td>@linea.Item3</td>
                    <td>@linea.Item5</td>
                </tr>
            }

        </table>
    </div>




    <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <th>ID Producto</th>
                <th>Cantidad</th>
                <th>Precio unitario</th>
                <th>Moneda</th>
                <th>Total en Pesos</th>
            </tr>


            @foreach (var linea in ViewBag.ListaDetalle)
            {
                <tr>
                    <td>@linea.IdProducto</td>
                    <td>@linea.Cantidad</td>
                    <td>@linea.PrecioUnidad</td>
                    <td>@linea.Moneda</td>
                    <td>@linea.ImporteTotal</td>

                </tr>
            }

        </table>
    </div>
    <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <th>TOTAL</th>
            </tr>

            <tr>
                <td>@ViewBag.Total</td>
            </tr>


        </table>
    </div>

}
catch (Exception)
{

}

