@model IEnumerable<MVCOBL.Models.Producto>

@{
	ViewData["Title"] = "Index";
}

<h1>Productos</h1>
@if (User.IsInRole("Admin"))
{
	<p>
		<a asp-action="Create" class="btn btn-primary">Agregar producto</a>
	</p>
}
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.IdProducto)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Descripcion)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Stock)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Precio)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Moneda)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IdCategoriaNavigation)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ImagenUrl)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.IdProducto)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Descripcion)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Stock)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Precio)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Moneda)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IdCategoriaNavigation.IdCategoria)
				</td>
				<td>
					<img src="~/imagenes/@item.ImagenUrl" alt="" width="150px" height="100px">
				</td>
				<td>
					@if (User.IsInRole("Admin"))
					{
						<a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdProducto">Editar</a>
					}
					<a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdProducto">Detalles</a>
					@if (User.IsInRole("Admin"))
					{
						<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProducto">Borrar</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>
