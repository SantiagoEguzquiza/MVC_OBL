@model IEnumerable<MVCOBL.Models.Cotizacione>

@{
    ViewData["Title"] = "Index";
}

<h1>Cotizaciones</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="actCotizaciones" class="btn btn-success">Actualizar Cotizacion</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Moneda
            </th>
            <th>
                Valor
            </th>
            <th>
                Fecha
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoMoneda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorMoneda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Borrar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
