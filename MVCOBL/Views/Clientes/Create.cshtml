@model MVCOBL.Models.Cliente

@{
	ViewData["Title"] = "Create";
}

<h1>Crear cliente</h1>


<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" id="formulario">
			<div class="form-group">
				<label asp-for="NumeroDocumento" class="control-label"></label>
				<input id="val_ci" asp-for="NumeroDocumento" placeholder="0.000.000-0" class="form-control" required />

			</div>
			<div class="form-group">
				<label asp-for="Nombre" class="control-label"></label>
				<input asp-for="Nombre" class="form-control" required />
				<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Direccion" class="control-label"></label>
				<input asp-for="Direccion" class="form-control" required />
				<span asp-validation-for="Direccion" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Telefono" class="control-label"></label>
				<input asp-for="Telefono" class="form-control" required />
				<span asp-validation-for="Telefono" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input id="submit" type="submit" value="Crear" class="btn btn-primary" />
			</div>
		</form>
	</div>



</div>

<div>
	<a asp-action="Index" class="btn btn-danger">Volver</a>
</div>

<script type="text/javascript" src=~/js/ci.js></script>

<script type="text/javascript" src=~/js/app.js></script>

@section Scripts {
	@{


		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
