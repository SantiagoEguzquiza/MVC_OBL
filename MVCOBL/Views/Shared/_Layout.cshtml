<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MVCOBL</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MVCOBL.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Productos" asp-action="Catalogo">VENTAS WEB</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a href="#">Control usuarios</a>
								<ul style="--cantidad-items: 1">
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Lista usuarios</a>
									</li>

								</ul>
							</li>

			

							<li class="nav-item">
								<a href="#">Productos</a>
								<ul style="--cantidad-items: 2">
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Categoria" asp-action="Index">Categorias</a>
									</li>
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="Index">Productos</a>
									</li>
								</ul>
							</li>

							<li class="nav-item">
								<a href="#">Control compras</a>
								<ul style="--cantidad-items: 2">
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Tienda" asp-action="Index">Tienda</a>
									</li>
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Compras" asp-action="Index">Compras</a>
									</li>
							
								</ul>
							</li>

							<li class="nav-item">
								<a href="#">Control ventas</a>
								<ul style="--cantidad-items: 3">
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
									</li>
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Ventas" asp-action="Index">Ventas</a>
									</li>
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="DetalleVentas" asp-action="Index">Detalle ventas</a>
									</li>
						
								</ul>
							</li>

							<li class="nav-item">
								<a href="#">Moneda</a>
								<ul style="--cantidad-items: 1">
							
									<li class="nav-item">
										<a class="nav-link text-dark" asp-area="" asp-controller="Cotizaciones" asp-action="Index">Ver cotizaciones</a>
									</li>
								</ul>
							</li>


						}

					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
