@model MVCOBL.Models.Factura

@{
    ViewData["Title"] = "Create";
}

<h1>Crear factura</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoFactura" class="control-label"></label>
                <input asp-for="TipoFactura" class="form-control" />
                <span asp-validation-for="TipoFactura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class ="form-control" asp-items="ViewBag.IdCliente"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cotizacion" class="control-label"></label>
                <select asp-for="Cotizacion" class ="form-control" asp-items="ViewBag.Cotizacion"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
