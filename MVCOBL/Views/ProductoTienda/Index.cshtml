@model IEnumerable<MVCOBL.Models.ProductoTiendum>

@{
    ViewData["Title"] = "Index";
}

<h1>Producto/Tienda</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrecioUnidadCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioUnidadVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProductoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTiendaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioUnidadCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioUnidadVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTiendaNavigation.IdTienda)
            </td>
            <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdProductoTienda">Editar</a>
                    }
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdProductoTienda">Detalles</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProductoTienda">Borrar</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
